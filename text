    const closeBtn = document.createElement('button');
    closeBtn.innerHTML = '&times;';
    closeBtn.className = 'close-card';
    closeBtn.type = 'button';
    document.getElementById('card').appendChild(closeBtn)
}

popUpCard.forEach(button => {
      createElement();
      button.addEventListener('click', () => {
      const card = document.querySelector(button.dataset.modalTarget)
      popUp(card)
    })
  })

  function popUp(card) {
    if (card == null) return
    card.classList.add('active')
 }

 function closeCard() {
    createElement();
    document.createElement
    const button = document.querySelector('.close-card'); 
    button.addEventListener('click', () => {
      const card = button.closest('.card')
      remove(card)
    })
  }

 function remove(card){
    if(card == null)return
    card.classList.remove('active')
 }